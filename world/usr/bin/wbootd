#!/usr/bin/luajit
function dofile_args(file, args)
			local f=loadfile(file)
			f(args)
end

	ffi = require'ffi'
	libsocket = require "socket"
	libunix   = require "socket.unix"
	socket    = assert(libunix())
	SOCKET    = "/tmp/socket.sock"
	inifile = require("ini")
